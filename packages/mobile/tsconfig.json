{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@nvlp/types": ["../types/src"],
      "@nvlp/types/*": ["../types/src/*"],
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../types/src/**/*"],
  "exclude": ["**/node_modules", "**/Pods"],
  "references": [
    { "path": "../types" }
  ]
}
