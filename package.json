{
  "name": "nvlp",
  "version": "1.0.0",
  "private": true,
  "description": "NVLP - Virtual Envelope Budgeting System",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "format": "pnpm -r exec prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "clean": "pnpm -r clean && rimraf node_modules",
    "mobile:ios": "pnpm --filter @nvlp/mobile ios",
    "mobile:android": "pnpm --filter @nvlp/mobile android",
    "mobile:start": "pnpm --filter @nvlp/mobile start",
    "mobile:start:reset": "pnpm --filter @nvlp/mobile start:reset"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@types/node": "^20.19.9",
    "dotenv": "^17.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}